@model IEnumerable<ProjectForDemoOnly.Models.Services.MyAnimeListModel.MAL_Genres>

@{
    ViewBag.Title = "Genres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/css/GenresPage.css">

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center mb-4">Anime Genres</h1>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search genres..." aria-label="Search genres">
            </div>
        </div>
    </div>
    <div class="row g-4">
        @foreach (var genre in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="genre-card bg-dark-subtle">
                    <h3 class="text-black">@genre.title</h3> <h2 class="text-black">id @genre.id</h2>
                    <span class="genre-count">+ @genre.amount anime</span>
                </div>
            </div>
        }
    </div>

    <nav class="mt-5">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>