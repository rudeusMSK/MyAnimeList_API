@model ProjectForDemoOnly.Models.MAL_Recommendations

<div class="recommendations-wrapper">
    <h3 class="header-title">Recommendations (Total: @Model.amount_recommendations)</h3>
    @if (Model.recommendations != null && Model.recommendations.Any())
    {
        <div class="recommendations-list">
            @foreach (var recommendation in Model.recommendations)
            {
                <div class="recommendation-card">
                    @if (recommendation.liked != null)
                    {
                        <div class="recommendation-image">
                            <img src="@recommendation.liked.picture_url" alt="Liked Anime Image" />
                        </div>
                    }
                    <div class="recommendation-content">
                        <p class="recommendation-description" id="desc-@recommendation.description">
                            @recommendation.description
                        </p>
                        <button class="show-more" onclick="toggleDescription(this, 'desc-@recommendation.description')">Show More</button>

                        <p class="recommended-by">
                            Recommended by: <a href="@recommendation.author.url">@recommendation.author.name</a>
                        </p>
                        <p class="recommendation-age">
                            Recommendation Age: @recommendation.recommendation_age
                        </p>

                        @if (recommendation.liked != null)
                        {
                            <h4>Liked Anime: @recommendation.liked.title</h4>
                            <p class="myanimelist-url">
                                MyAnimeList URL: <a href="@recommendation.liked.myanimelist_url">@recommendation.liked.myanimelist_url</a>
                            </p>
                        }
                        @if (recommendation.recommendation2 != null)
                        {
                            <h4>Recommendation2 Anime: @recommendation.recommendation2.title</h4>
                            <p class="myanimelist-url">
                                MyAnimeList URL: <a href="@recommendation.recommendation2.myanimelist_url">@recommendation.recommendation2.myanimelist_url</a>
                            </p>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No recommendations found.</p>
    }
</div>

<!-- JavaScript -->
<script>
    function toggleDescription(button, descriptionId) {
        var description = document.getElementById(descriptionId);
        description.classList.toggle("expanded");
        if (description.classList.contains("expanded")) {
            button.innerText = "Show Less";
        } else {
            button.innerText = "Show More";
        }
    }

    // Ẩn nút "Show More"
    window.addEventListener("load", function () {
        var descriptions = document.getElementsByClassName("recommendation-description");
        for (var i = 0; i < descriptions.length; i++) {
            var desc = descriptions[i];
            var btn = desc.nextElementSibling;

            if (!btn) continue;

            var originalMaxHeight = desc.style.maxHeight;
            desc.style.maxHeight = "none";
            var fullHeight = desc.scrollHeight;

            desc.style.maxHeight = originalMaxHeight;

            if (fullHeight <= 80) {
                btn.style.display = "none";
            }
        }
    });
</script>
